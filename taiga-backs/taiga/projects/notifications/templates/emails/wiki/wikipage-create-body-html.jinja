{% extends "emails/base-body-html.jinja" %}

{% block body %}
    {% trans signature=sr("signature"), user=user.get_full_name(), changer=changer.get_full_name(), project=project.name, page=snapshot.slug, url=resolve_front_url("wiki", project.slug, snapshot.slug) %}
    <h1>New wiki page created on {{ project }}</h1>
    <p>Hello {{ user }},<br />{{ changer }} has created a new wiki page:</p>
    <p>{{ page }}</p>
    <a class="button" href="{{ url }}" title="Wiki page {{ page }}">See wiki page</a>
    <p><small>{{ signature }}</small></p>
    {% endtrans %}
{% endblock %}

{% extends "emails/base-body-html.jinja" %}

{% block body %}
    {% trans signature=sr("signature"), user=user.get_full_name(), changer=changer.get_full_name(), project=project.name, name=snapshot.name, url=resolve_front_url("taskboard", project.slug, snapshot.slug) %}
    <h1>New sprint created on {{ project }}</h1>
    <p>Hello {{ user }},<br />{{ changer }} has created a new sprint</p>
    <p><strong>{{ name }}</strong></p>
    <a class="button" href="{{ url }}" title="See Sprint {{ name }}">See sprint</a>
    <p><small>{{ signature }}</small></p>
    {% endtrans %}
{% endblock %}

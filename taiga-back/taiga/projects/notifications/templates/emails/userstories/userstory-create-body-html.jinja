{% extends "emails/base-body-html.jinja" %}

{% block body %}
    {% trans signature=sr("signature"), user=user.get_full_name(), changer=changer.get_full_name(), project=project.name, ref=snapshot.ref, subject=snapshot.subject, url=resolve_front_url("userstory", project.slug, snapshot.ref) %}
    <h1>New user story created on {{ project }}</h1>
    <p>Hello {{ user }},<br />{{ changer }} has created a new user story:</p>
    <p><strong>#{{ ref }} {{ subject }}</strong></p>
    <a class="button" href="{{ url }}" title="See User Story #{{ ref }} {{ subject }}">See user story</a>
    <p><small>{{ signature }}</small></p>
    {% endtrans %}
{% endblock %}
